pipeline {
  agent any

  tools {
    nodejs 'node 8.9.0'
  }
  
  stages {
    stage('Build') {
      when {
        changeset '**/result/**'
      }
      steps {
        dir('result') {
          sh 'npm install'
        }
      }
    }
    stage('Test') {
      when {
        changeset '**/result/**'
      }
      steps {
        dir('result') {
          sh 'npm install'
          sh 'npm test'
        }
      }
    }
  }

  post {
    always {
      echo 'node pipeline completed..'
    }
  }
}